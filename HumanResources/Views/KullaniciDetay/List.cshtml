@model List<kullanicidetay>

<div>
    <a asp-controller="KullaniciDetay" asp-action="Ekle" class="btn btn-success">Kullanıcı Hakkında Bilgi Ekle</a>
</div>

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">#Id</th>
            <th scope="col">#Kullanıcı Id</th>
            <th scope="col">Adres</th>
            <th scope="col">Tc</th>
            <th scope="col">Şehir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.id</td>
                <td>@item.kullaniciid</td>
                <td>@item.adres</td>
                <td>@item.tc</td>
                <td>@item.sehir</td>
                <td>
                <a class="btn btn-warning" asp-controller="KullaniciDetay" asp-action="Guncelle" asp-route-id="@item.id">Güncelle</a>
                <a class="btn btn-danger" asp-controller="KullaniciDetay" asp-action="Sil" asp-route-id="@item.id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>