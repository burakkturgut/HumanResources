@model List<BasvuruViewModel>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


@foreach (var item in Model)

{
    <div class="card" style="width: 30rem; float:left; margin: 5px">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-6">
                    <h6 class="card-title">@item.baslik</h6>
                </div>
                <div class="col-md-6 col-sm-6 col-6 text-right">
                    <h5>@item.olusturmatarihi</h5>
                </div>
            </div>
            <p class="card-text">@item.icerik</p>
            <a class="btn btn-success" asp-controller="Paylasim" asp-action="KullaniciBasvuruList" asp-route-id="@item.user_id" asp-route-paylasimid="@item.paylasimid">BAŞVUR</a>
        </div>
    </div>
}



