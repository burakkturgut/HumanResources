@model Kullanici


<form asp-controller="Kullanici" asp-action="Giriş" method="post">
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">E-posta</font></font></label>
        <div class="col-sm-10">
            <input type="email" class="form-control" name="Email" id="inputEmail3">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword3" class="col-sm-2 col-form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Şifre</font></font></label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="sifre" id="inputPassword3">
        </div>
    </div>


    <button type="submit" class="btn btn-primary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Giriş Yap</font></font></button>
    <br><br><br><br>
    <p>Hesanınız Yok Mu</p>
    <button type="submit" class="btn btn-dark"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kayıt Ol</font></font></button>
</form>
