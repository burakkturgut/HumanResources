@model List<kategori>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<br />
<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">#Id</th>
            <th scope="col">Adı</th>
            <th scope="col">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.kategoriadi</td>
                <td>
                    <a class="btn btn-success" asp-controller="Kategori" asp-action="KullaniciList" asp-route-id="@item.id">Başvur</a>
                </td>
            </tr>
        }
    </tbody>
</table>
